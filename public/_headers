# Cache headers for Lovable Cloud deployment

# رؤوس أمان شاملة كـ fallback لجميع الملفات
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Assets with content hashes - cache for 1 year (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Service Worker - no cache (مهم جداً لمنع الأخطاء)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache, no-store

/registerSW.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache

/workbox-*.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache

# Manifest
/manifest.webmanifest
  Cache-Control: public, max-age=86400

# HTML - no cache
/index.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff

# Favicon
/favicon.ico
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  X-Content-Type-Options: nosniff

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  X-Content-Type-Options: nosniff

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  X-Content-Type-Options: nosniff

# Images
/*.png
  Cache-Control: public, max-age=2592000
  X-Content-Type-Options: nosniff

/*.jpg
  Cache-Control: public, max-age=2592000
  X-Content-Type-Options: nosniff

/*.jpeg
  Cache-Control: public, max-age=2592000
  X-Content-Type-Options: nosniff

/*.svg
  Cache-Control: public, max-age=2592000
  X-Content-Type-Options: nosniff

/*.webp
  Cache-Control: public, max-age=2592000
  X-Content-Type-Options: nosniff

/*.ico
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff
