# Cache headers for Lovable Cloud deployment
# Assets with content hashes - cache for 1 year (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Service Worker - no cache (مهم جداً لمنع الأخطاء)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache, no-store

/registerSW.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache

/workbox-*.js
  Cache-Control: public, max-age=0, must-revalidate, no-cache

# Manifest
/manifest.webmanifest
  Cache-Control: public, max-age=86400

# HTML - no cache
/index.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Images
/*.png
  Cache-Control: public, max-age=2592000

/*.jpg
  Cache-Control: public, max-age=2592000

/*.jpeg
  Cache-Control: public, max-age=2592000

/*.svg
  Cache-Control: public, max-age=2592000

/*.webp
  Cache-Control: public, max-age=2592000
